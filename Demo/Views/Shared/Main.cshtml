
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>首页</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <style>
        body {
            background-color: cadetblue;
        }

        .a p, i, h3 {
            color: white;
        }

       
        .panel:hover {
            box-shadow: 5px 0px 40px rgb(0 0 0);
        }
        .panel-heading{
            background-color:aquamarine;
        }
      
    </style>
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <!--顶部-->
                <div class="row">
                    <div class="col-md-1"><img src="~/img/logo.png" /> </div>
                    <div class="col-md-4"><div style="margin:70px 0 0 25px;position:absolute"><h3>@Html.ActionLink("防疫物资管理系统", "Index", "Home", new { @style = "color:white;text-decoration:none;" })</h3></div></div>
                    <div class="col-md-3 col-md-offset-3 text-right" style="margin-top:30px;">

                        <img src="~/img/china.png">
                        <span>中文版</span>
                        |
                        <img src="~/img/uk.png">
                        <span>英语版</span>
                        <br />
                        <br>

                        <a href="/Users/Logout" class="btn btn-danger"><span class="glyphicon glyphicon-log-out"></span>退出登录</a>
                    </div>
                </div>
                <!--导航栏-->
                <div class="row">
                    <nav class="navbar-inverse">
                        <div class="container-fluid">
                            <div class="navbar-header">
                                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                                    <span class="icon-bar"></span>
                                    <span class="icon-bar"></span>
                                    <span class="icon-bar"></span>
                                </button>
                                @Html.ActionLink("主页", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                            </div>
                            <div class="navbar-collapse collapse">
                                <ul class="nav navbar-nav">
                                    <li>@Html.ActionLink("物资管理", "Index", "Goods")</li>
                                    <li>@Html.ActionLink("计划管理", "Index", "Plans")</li>
                                    <li>@Html.ActionLink("用户管理", "Index", "Users")</li>
                                    <li>@Html.ActionLink("联系我们", "Contact", "Home")</li>
                                </ul>
                            </div>
                        </div>
                    </nav>
                </div>
                @*导航内容*@

                <div class="row">
                    <div class="col-md-12">
                        @RenderBody()
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12" style="margin-top:30px">
                        <hr />
                        <p class="text-center">Copyright © 2022 Adobe Systems Incorporated. All rights reserved. </p>
                    </div>
                  
                </div>
            </div>
            </div>
        </div>
  

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>