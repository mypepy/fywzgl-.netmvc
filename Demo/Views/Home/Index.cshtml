@{
    ViewBag.Title = "Home Page";
}

@*轮播*@
    <div id="myCarousel" class="carousel slide" data-interval="2000">
        <!-- 轮播（Carousel）指标 -->
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
            <li data-target="#myCarousel" data-slide-to="3"></li>
        </ol>
        <!-- 轮播（Carousel）项目 -->
        <div class="carousel-inner">
            <div class="item active">
                <img src="~/img/lunbo1.jpg" style="width: 100%; height: 500px" alt="First slide">
            </div>
            <div class="item">
                <img src="~/img/lunbo2.jpg" style="width: 100%; height: 500px" alt="Second slide">
            </div>
            <div class="item">
                <img src="~/img/lunbo3.jpg" style="width: 100%; height: 500px" alt="Third slide">
            </div>
            <div class="item">
                <img src="~/img/lunbo4.jpg"style="width: 100%; height: 500px" alt="Fourth slide">
            </div>
        </div>
        <!-- 轮播（Carousel）导航 -->
        <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
    @*关于我们*@
    <div class="row" style="color:white">
        <div class="col-md-4">
            <img src="~/img/kouzhao.jpg" style="width: 200px; height: 200px; margin-top: 40px" class="img-circle" />
        </div>
        <div class="col-md-8" style="margin-top:30px">
            <h3 style="text-align:center">关于我们</h3>
            <p>防疫物资管理系统从防疫物资的采购、入库以及机构内对防疫物资使用消耗情况的管理、机构间调拨、科室间调拨等方面对防疫物资进行全流程管理，视疫情最新态势,及时高效的完成防疫物资统-调拨，第-时间用于疫情防控工作现场。在疫情常态化防控的大环境下,为各级各类疫情防控的管理机构、业务机构提供规范化管理流程及强有力的数据支撑。</p>
        </div>
    </div>
    @*我们的服务*@
    <div class="row">
        <div class="jumbotron" style="background-color:steelblue;margin-top:40px">
            <div class="row ">
                <h3>我们的服务</h3>
                <p>解决疫情期间各级防控指挥部、卫健委、医疗机构等防疫重点单位在应急物资管理工作上的难点,畅通需求与保障渠道,全力保证疫情期间防疫物资有效供给,确保紧缺防疫物资能高效的用于疫情防控工作,加强对疫情防控应急物资的管理。</p>
            </div>
            <div class="row  pull-left">
                <div class="col-md-3">
                    <div class="panel text-center">
                        <div class="panel-heading">
                            <span class="glyphicon glyphicon-briefcase"></span>
                            <h5>@Html.ActionLink("物资管理", "Index", "Goods")</h5>
                        </div>
                        <div class="panel-body ">
                            <p>对物资进行系统化，规范化收集及发放</p>

                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="panel text-center">
                        <div class="panel-heading">
                            <span class="glyphicon glyphicon-list"></span>
                            <h5>@Html.ActionLink("制定计划", "Index", "Plans")</h5>
                        </div>
                        <div class="panel-body">
                            <p>规划时间，创建计划，完成计划打卡</p>

                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="panel text-center">
                        <div class="panel-heading">
                            <span class="glyphicon glyphicon-user"></span>
                            <h5>@Html.ActionLink("用户管理", "Index", "Users")</h5>
                        </div>
                        <div class="panel-body">
                            <p>为用户提供创建，修改，注销用户等功能</p>

                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="panel text-center">
                        <div class="panel-heading">
                            <span class="glyphicon glyphicon-pencil"></span>
                            <h5>@Html.ActionLink("联系我们", "Contact", "Home")</h5>
                        </div>
                        <div class="panel-body">
                            <p>
                                如果有任何问题，欢迎联系我们
                            </p>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
