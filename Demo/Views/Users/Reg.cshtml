
@{
    Layout = null;
}

<!DOCTYPE html>
@model Model.users
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>用户注册</title>
    <link rel="stylesheet" href="~/Content/bootstrap.css" />
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    <style>
        body {
            background-color: cadetblue;
            margin-top: 20px;
        }

        #a {
            margin-left: 40px;
            color: darkblue;
            font-size: 20px;
        }
    </style>
</head>
<body>
    <form action="/Users/DoReg" method="post">
        <div class="container">
            <h3 class="text-center" style="margin-left:80px">用户注册</h3>
            @Html.Hidden("uid")
            <div class="row form-group">
                <div class="col-md-6 col-md-push-3">
                    <div class="col-md-3 col-md-push-1" style=""><h4>用户名</h4></div>
                    <div class="col-md-8">
                        @Html.TextBox("uname", null, new { @class = "form-control", @placeholder = "请输入用户名" })
                        @Html.ValidationMessageFor(m => m.uname, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <div class="row form-group">
                <div class="col-md-6 col-md-push-3">
                    <div class="col-md-3 col-md-push-1" style=""><h4>密码</h4></div>
                    <div class="col-md-8">
                        @Html.TextBox("pwd", null, new { @class = "form-control", @placeholder = "请输入密码" })
                        @Html.ValidationMessageFor(m => m.pwd, "", new { @class = "text-danger" })

                    </div>
                </div>
            </div>
            <div class="row form-group">
                <div class="col-md-6 col-md-push-3">
                    <div class="col-md-3 col-md-push-1" style=""><h4>性别</h4></div>
                    <div class="col-md-8">
                        @Html.RadioButton("sex", "男",new { @checked ="true"}) 男 @Html.RadioButton("sex", "女") 女
                    </div>
                </div>
            </div>
            <div class="row form-group">
                <div class="col-md-6 col-md-push-3">
                    <div class="col-md-3 col-md-push-1" style=""><h4>年龄</h4></div>
                    <div class="col-md-8">
                        @Html.TextBox("age", null, new { @class = "form-control", @placeholder = "请输入年龄" })
                    </div>
                </div>
            </div>
            <div class="row form-group">
                <div class="col-md-6 col-md-push-3">
                    <div class="col-md-3 col-md-push-1" style=""><h4>生日</h4></div>
                    <div class="col-md-8">
                        <input type="date" name="birth" value="@Model.birth.ToString("yyyy-MM-dd")" class="form-control" />
                    </div>
                </div>
            </div>
            <div class="row form-group">
                <div class="col-md-6 col-md-push-3">
                    <div class="col-md-3 col-md-push-1" style=""><h4>邮箱</h4></div>
                    <div class="col-md-8">
                        @Html.TextBox("email", null, new { @class = "form-control", @placeholder = "请输入邮箱" })
                    </div>
                </div>
            </div>
            <div class="row form-group">
                <div class="col-md-6 col-md-push-3">
                    <div class="col-md-3 col-md-push-1" style=""><h4>电话</h4></div>
                    <div class="col-md-8">
                        @Html.TextBox("tel", null, new { @class = "form-control", @placeholder = "请输入电话" })
                    </div>
                </div>
            </div>
            <div class="row form-group">
                <div class="col-md-6 col-md-push-6">
                    <button type="submit" class="btn btn-default btn-lg">
                        注册
                    </button>
                </div>
            </div>
        </div>
        <div id="a">
            @Html.ActionLink("返回登录", "login", "Users")
        </div>
    </form>
</body>
</html>
