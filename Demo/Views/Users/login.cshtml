        }

        .imgNamePwd {
            margin-top: 46px;
        }

        #imgLogin {
            position: absolute;
            margin-top: 20px;
        }


        a {
            float: left;
            margin-top: 180px;
            color: darkblue;
            font-size: 20px;
        }

        #isShow {
            margin-left: 236px;
            margin-top: 57px;
            position: absolute;
        }
    </style>
</head>
<body>
    <div class="row"></div>
    <div id="main" class="col-md-12">
        <div class="row">
            <div id="login" class="col-md-5 pull-left"  style="border-radius: 25px; background: linear-gradient(rgb(0 0 0 / 0),rgb(0 0 0 / 0.35)); height: 300px">
                <div class="row text-center"> <h3>请登录</h3></div>
                <form action="/Users/DoLogin" method="post">
                    <div class="row">
                        <div class="col-md-2"><img src="/img/用户名.png" class="imgNamePwd img-responsive" /></div><div class="col-md-10"><input type="text" class="form-control" id="txtName" name="uname" placeholder="请输入用户名" /></div>
                    </div>
                    <div class="row">
                        <div class="col-md-2"><img src="/img/密码.png" class="imgNamePwd img-responsive" /></div><div class="col-md-10"><input type="password" id="txtPwd" name="pwd" class="form-control" placeholder="请输入密码" /><img src="/img/不显示.png" id="isShow" width="20" height="20" /></div>
                    </div>
                    <div class="row">
                        <div class="col-md-3  col-md-offset-4">
                            <button type="submit" class="form-control btn btn-default" id="imgLogin">登录</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
        <a>@Html.ActionLink("如果没有账号，请点击此处注册!", "Reg", "Users")</a>  
    </div>
    <script type="text/javascript">
            //是否隐藏密码
            var isshow = document.getElementById('isShow');
            var pwd = document.getElementById('txtPwd');
            var flag = 0;
            isshow.onclick = function () {
                //点击一次后，flag一定进行改变
                if (flag == 0) {
                    pwd.type = 'text';
                    isshow.src = '/img/显示.png';
                    flag = 1;
                }
                else {
                    pwd.type = 'password';
                    isshow.src = '/img/不显示.png';
                    flag = 0;
                }
        }
        //背景虚化
        var login = document.getElementById('login');
        var main = document.getElementById('main');
