    <style>

        #main {
            margin: 0 auto;
            width: 100%;
            height: 770px;
            border: 1px solid black;
            background-image: url('/img/登录背景.jpg');
            background-position: center;
            background-size: 100% 770px;
            background-repeat: no-repeat;
            /* -webkit-filter: blur(10px);
            -moz-filter: blur(10px);
            filter: blur(10px);*/
        }
            
        #login {
            width: 30%;
            height: 250px;
            margin: 240px 0 0 140px;
        }

        .imgNamePwd {
            width: 40px;
