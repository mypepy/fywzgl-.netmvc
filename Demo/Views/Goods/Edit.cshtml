
@{
    Layout = null;
}

<!DOCTYPE html>
@model Model.goods
 
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>出入库</title>
    <link rel="stylesheet" href="~/Content/bootstrap.css" />
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    <style>
        body {
            background-color: cadetblue;
            margin-top: 20px;
        }

        #a {
            margin-left: 40px;
            color: darkblue;
            font-size: 20px;
        }
    </style>
</head>
<body>
    @*@using (Html.BeginForm("Edit", "Goods", FormMethod.Post))
    {*@
    <form action="/Goods/DoEdit" method="post" enctype="multipart/form-data">
        <div class="container">
            <h3 class="text-center" style="margin-left:80px">物资出入库</h3>
            @Html.Hidden("gid")
            <div class="row form-group">
                <div class="col-md-6 col-md-push-3">
                    <div class="col-md-3 col-md-push-1" style=""><h4>物资名</h4></div>
                    <div class="col-md-8">
                        @Html.TextBox("gname", null, new { @class = "form-control", @placeholder = "请输入物资名" })
                        @Html.ValidationMessageFor(m => m.gname, "", new { @class = "text-danger" })

                    </div>
                </div>
            </div>
            <div class="row form-group">
                <div class="col-md-6 col-md-push-3">
                    <div class="col-md-3 col-md-push-1" style=""><h4>图片</h4></div>
                    <div class="col-md-8">
                        <input type="file" name="uploadFileName" value="请选择图片"/>
                    </div>
                </div>
            </div>

            <div class="row form-group">
                <div class="col-md-6 col-md-push-3">
                    <div class="col-md-3 col-md-push-1" style=""><h4>来源</h4></div>
                    <div class="col-md-8">
                        @Html.TextBox("source", null, new { @class = "form-control", @placeholder = "请输入来源" })
                    </div>
                </div>
            </div>

            <div class="row form-group">
                <div class="col-md-6 col-md-push-3">
                    <div class="col-md-3 col-md-push-1" style=""><h4>数量</h4></div>
                    <div class="col-md-8">
                        @Html.TextBox("num", null, new { @class = "form-control", @placeholder = "请输入数量" })
                        @Html.ValidationMessageFor(m => m.num, "", new { @class = "text-danger" })

                    </div>
                </div>
            </div>
            <div class="row form-group">
                <div class="col-md-6 col-md-push-3">
                    <div class="col-md-3 col-md-push-1" style=""><h4>单位</h4></div>
                    <div class="col-md-8">
                        @Html.TextBox("unit", null, new { @class = "form-control", @placeholder = "请输入单位" })
                    </div>
                </div>
            </div>
            <div class="row form-group">
                <div class="col-md-6 col-md-push-3">
                    <div class="col-md-3 col-md-push-1" style=""><h4>备注</h4></div>
                    <div class="col-md-8">
                        @Html.TextArea("gremark", null, new { @class = "form-control", @placeholder = "请输入备注" })
                    </div>
                </div>
            </div>
            <div class="row form-group">
                <div class="col-md-6 col-md-push-3">
                    <div class="col-md-3 col-md-push-1" style=""><h4>类型</h4></div>
                    <div class="col-md-8">
                        @Html.DropDownList("tid", null,new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.tid, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>

            <div class="row form-group">
                <div class="col-md-6 col-md-push-6">
                    <button type="submit" class="btn btn-default btn-lg">
                        保存
                    </button>
                </div>
            </div>
        </div>
        <div id="a">
            @Html.ActionLink("返回主页", "Index", "Goods")
        </div>
    </form>
    @*}*@
</body>
</html>
